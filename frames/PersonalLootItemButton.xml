                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture
                    file="Interface\Addons\PersonalRollLoot\textures\restricted"
                    parentKey="Restricted"
                    hidden="true">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="TOPRIGHT"
                            relativeKey="$parent"
                            relativePoint="TOPRIGHT" x="4" y="0" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
